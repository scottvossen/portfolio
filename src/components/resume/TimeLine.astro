---
const { title, subtitle, detailLines, technologies } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span
      class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"
    ></span>
  </div>
  <div class="experience__data bd-grid px-5 mb-5">
    <h3 class="font-semibold mb-1">{title}</h3>
    <span class="font-light text-sm">{subtitle}</span>
    <div class="my-2 text-justify">
      <ul class="list-disc list-inside">
        {detailLines?.map((line) => <li>{line}</li>)}
      </ul>

      {
        technologies === undefined ? (
          ''
        ) : (
          <p class="mt-2 text-sm">
            <em>Technologies: {technologies}</em>
          </p>
        )
      }
    </div>
  </div>
</div>
